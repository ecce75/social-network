# Start from caddy-builder to build a custom Caddy with Cloudflare DNS module
FROM caddy:2-builder AS builder

# Install Cloudflare DNS provider module
RUN xcaddy build \
    --with github.com/caddy-dns/cloudflare

# Start from the official Caddy image
FROM caddy:2

# Copy the custom Caddy build with Cloudflare DNS module from the builder stage
COPY --from=builder /usr/bin/caddy /usr/bin/caddy
